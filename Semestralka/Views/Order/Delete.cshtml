@model Semestralka.Models.Order
<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Order</h2>
            <div class="col-6">
                <a asp-action="Show" class="btn btn-primary">
                    Back
                </a>

            </div>
        </div>


        <div class="form-group">
            <label asp-for="UserEmail" for="formGroupExampleInput"></label>
            <input asp-for="UserEmail" disabled class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Description" for="formGroupExampleInput2"></label>
            <input asp-for="Description" disabled class="form-control">
        </div>
        <div class="col">
            <input type="submit" class="btn btn-danger w-100" value="Delete" />
        </div>


    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}
