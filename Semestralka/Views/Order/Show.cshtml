@using Microsoft.AspNetCore.Identity
@using Semestralka.Areas.Identity.Data

@inject SignInManager<SemestralkaUser> SignInManager
@inject UserManager<SemestralkaUser> UserManager
@model IEnumerable<Semestralka.Models.Order>

<div>
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Email</th>
                <th>Description</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
            <tr>
                <td width="20%">@obj.UserEmail</td>
                <td width="60%">@obj.Description</td>
                <td width="60%">@obj.State</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Order" asp-route-Id="@obj.Id" asp-action="Change" class="btn btn-success">
                                Change Status
                            </a>
                            <a asp-controller="Order" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger">
                                Delete
                            </a>
                        </div>
                    </td>             
            </tr>
            }
        </tbody>
    </table>

}
else
{
    <p>Kategorie neexistuju</p>
}
</div>
