@model Semestralka.Models.Order

@using Microsoft.AspNetCore.Identity
@using Semestralka.Areas.Identity.Data

@inject SignInManager<SemestralkaUser> SignInManager
@inject UserManager<SemestralkaUser> UserManager
<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Pridaj Kategoriu</h2>
            <div class="col-6">
                <a asp-action="Index" asp-controller="Home" class="btn btn-primary">
                    Back
                </a>

            </div>
        </div>
        <div class="form-group">
            <input asp-for="UserEmail" hidden value="@SignInManager.Context.User.Identity.Name">
            <input asp-for="UserEmail" hidden value="neriesene">
        </div>
        <div class="form-group">
            <label asp-for="Description" for="formGroupExampleInput2"></label>
            <input asp-for="Description" class="form-control" placeholder="Enter order">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="col">
            <input type="submit" class="btn btn-info w-100" value="Create" />
        </div>


    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}

