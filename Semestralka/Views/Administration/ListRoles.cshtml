
@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ListRoles</h1>


@if (Model.Any())
{
    foreach (var role in Model)
    {
        <div class="card">
            <div class="card-header">
                Id : @role.Id
            </div>
            <div class="card-body">
                <h3 class="card-title">@role.Name</h3>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id">Edit</a>
                <a class="btn btn-primary">Delete</a>
            </div>
        </div>

    }

}
else
{
    <div class="card">
        <div class="card-header">
            No Roles
        </div>
        <div class="card-body">
            <h3 class="card-title">You can use button below to create new Role</h3>
            <a class="btn btn-primary" asp-action="CreateRole" asp-controller="Administration">Create role</a>
        </div>
    </div>
}
