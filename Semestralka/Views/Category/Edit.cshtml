@model Semestralka.Models.Category
<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Uprav Kategoriu</h2>
            <div class="col-6">
                <a asp-action="Index" class="btn btn-primary">
                    Nazad
                </a>

            </div>
        </div>


        <div class="form-group">
            <label asp-for="Name" for="formGroupExampleInput"></label>
            <input asp-for="Name" type="text" class="form-control" placeholder="Example input">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DisplayOrder" for="formGroupExampleInput2"></label>
            <input asp-for="DisplayOrder" class="form-control" placeholder="Another input">
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="col">
            <input type="submit" class="btn btn-info w-100" value="Update" />
        </div>


    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}

