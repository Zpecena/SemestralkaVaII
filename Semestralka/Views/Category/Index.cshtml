
@model IEnumerable<Semestralka.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Kategorie</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                Vytvor novu Kategoriu
            </a>
            
        </div>
    </div>

    <br /> <br />

    @if (Model.Count() > 0)
    {
     <table class="table table-bordered table-striped" style="width:100%">
     <thead>
         <tr>
             <th>Nazov</th>
             <th>Poradie</th>
         </tr>
     </thead>
    <tbody>
        @foreach(var obj in Model)
        {
        <tr>
            <td width="50%">@obj.Name</td>
            <td width="30%">@obj.DisplayOrder</td>
            <td class="text-center">
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary">
                        Edit
                    </a>
                    <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger">
                        Delete
                    </a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>

    }
    else
    {
        <p>Kategorie neexistuju</p>
    }
</div>


