@model Semestralka.Models.Category
<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Vymaz Kategoriu</h2>
            <div class="col-6">
                <a asp-action="Index" class="btn btn-primary">
                    Nazad
                </a>

            </div>
        </div>


        <div class="form-group">
            <label asp-for="Name" for="formGroupExampleInput"></label>
            <input asp-for="Name" disabled class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="DisplayOrder" for="formGroupExampleInput2"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" >
        </div>
        <div class="col">
            <input type="submit" class="btn btn-danger w-100" value="Delete" />
        </div>


    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}

